  </tr>

<%% @list.each do |x| %>
  <tr>
<% attributes.each do |attribute| -%>
    <td><%%= x.<%= attribute.name %> %></td>
<% end -%>
    <td><%%= link_to 'Show', x %></td>
    <td><%%= link_to 'Edit', edit_<%= singular_table_name %>_path(x) %></td>
    <td><%%= link_to 'Destroy', x, <%= key_value :confirm, "'Are you sure?'" %>, <%= key_value :method, ":delete" %> %></td>
  </tr>
<%% end %>
</table>

